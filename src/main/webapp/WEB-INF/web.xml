<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Blockchain Supply Chain Management System</display-name>
    <description>Web-based blockchain supply chain management system</description>

    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Authentication Servlet -->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.supplychain.servlet.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <!-- Dashboard Servlet -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.supplychain.servlet.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Product Management Servlet -->
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.supplychain.servlet.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <!-- Transaction Servlet -->
    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <servlet-class>com.supplychain.servlet.TransactionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/transactions</url-pattern>
    </servlet-mapping>

    <!-- Blockchain Servlet -->
    <servlet>
        <servlet-name>BlockchainServlet</servlet-name>
        <servlet-class>com.supplychain.servlet.BlockchainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlockchainServlet</servlet-name>
        <url-pattern>/blockchain</url-pattern>
    </servlet-mapping>

    <!-- API Servlet for AJAX calls -->
    <servlet>
        <servlet-name>ApiServlet</servlet-name>
        <servlet-class>com.supplychain.servlet.ApiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApiServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <!-- Session timeout (30 minutes) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

    <!-- Filter for authentication -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.supplychain.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/products</url-pattern>
        <url-pattern>/transactions</url-pattern>
        <url-pattern>/blockchain</url-pattern>
    </filter-mapping>

</web-app>